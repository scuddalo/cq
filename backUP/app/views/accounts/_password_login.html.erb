<% form_tag password_login_path, :method => :post, :class => 'horizontal section' do -%>

	<%= text_field_tag :login, params[:login], :class => 'text focus' %>
	<%= password_field_tag :password, nil, :class => 'password' %>	
	<%= check_box_tag 'remember_me', 1, false, :class => 'checkbox' %>	
	
	<%= submit_tag 'Log In Now', :class => 'button' %>	

<% end -%>