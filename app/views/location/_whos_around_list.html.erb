<p class='section'>
  People 
  <% if requested_profile.location.kind_of?(Location::Airport) -%>
	  in
  <% else -%>
	  near
  <% end -%>
  <%= requested_profile.location -%>:
</p>

<ul class='section'>
	<% whos_around.each do |p| -%>
	<li><%= link_to p, profile_path(:profile_id => p) -%> - <i><%= h p.distance_to(requested_profile) -%> - <%= h p.status -%>...</i> <%= link_to 'Send Invitation', send_invitation_message_path(p), :method => :post %></li>
	<% end -%>
</ul>
