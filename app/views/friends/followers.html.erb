<% title "Followers" -%>
<% nav_section 'contacts' -%>

<% followers = requested_profile.followers -%>

<% with_grammatical_context(:object => 'follower'.quantitize(followers)) do |gc| -%>
<p class='section'>
	<%= gc.subject -%>
	<%= gc.conjugate('has') -%>
	<%= gc.object -%>.
</p>
<% end -%>

<%= render :partial => 'following_list', :locals => { :list => followers } %>